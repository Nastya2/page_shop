footer.footer
    .footer__top
        .container
            .footer__left
                a(href="#").logo.logo__footer
                    img(src="img/logo/logo-footer.png" alt="cooltech logo").logo__img
                    .logo__text cooltech
            .footer__right
                ul.social.footer__socials
                    -var items = ['fb-big','vk-big','tw-big']
                    each item in items
                        li(class="socials__item socials__item_" + item)
                            a(href="#").socials__link
                ul.foter__nav
                     - var items = ["Планшеты","Мобильные телефоны","Mp3 плееры","Персональные компьютеры","Аксессуары","Бытовая техника"]
                     each item in items
                        li.footer__nav-item
                            a(href="#").footer__nav-link= item
    .footer__bottom
        .container
            .footer__copyright All rights reserved.
    