
.pagination
    .container
        ul.pagination__list
            li.pagination__item.pagination__item_prev
                a(href="#").pagination__link
                    .pagination__mark
            - for (var i = 1; i < 4; i++)
                li.pagination__item
                    a(href="#" ).pagination__link
                        .pagination__mark= i
            li.pagination__item.pagination__item_next
                a(href="#" ).pagination__link
                    .pagination__mark