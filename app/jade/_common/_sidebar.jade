

.sidebar

    - var items = ["Флагманы","Бюджетная линейка"]
    ul.categories__list

        each item in items
            li(class="categories__item categories__item_" + ((item == "Бюджетная линейка") ? '' + 'active' : ''))
                a(href="#").categories__link=item
    .filter
        ul.filter__list
            li.filter__item
                .filter__title
                    h2 Наличие в магазинах
                .filter__content
                    ul.filter__choose
                        - var items = ["Во всех магазинах","В ближайшем ко мне магазине"]
                        each item in items
                            li.filter__choose-item
                                label.filter__choose-label
                                    input(name="location" type="radio").filter__choose-input
                                    span.filter__choose-elem
                                    span.filter__choose-text= item
            li.filter__item
                .filter__title
                    h2 Бренды
                .filter__content
                    ul.filter__choose.filter__choose_checkboxes
                        - var items = ["Lenovo","Apple","Samsung","Asus","Motorola"]
                        each item in items
                            li.filter__choose-item
                                label.filter__choose-label
                                    input(name="location" type="checkbox").filter__choose-input
                                    span.filter__choose-elem
                                    span.filter__choose-text= item   
                    .filter__reset--wrap    
                        a(href="").filter__reset Сбросить фильтр
            li.filter__item
                .filter__title
                    h2 Цена
                .filter__content 
                    .filter__slider
                        .filter__slider-displays
                            .filter__slider-left
                               .filter__slider-text от
                               input(name="price" type="text" ).filter__slider-input.filter__slider-input_from
                            .filter__slider-right 
                                .filter__slider-text до
                                input(name="price" type="text" ).filter__slider-input.filter__slider-input_to

                        div(class="filter__slider-element" data-min="0" data-max= "30000")
            li.filter__item
                .filter__title
                    h2 Цвет
                .filter__content 
                    ul.filter__colors
                        - var colors = ['fff','000','0a3153','ff1800','fff343','fb914a','92c37','000','fff','000','fff','000','92c37','92c37','92c37']
                        each color in colors
                            li.filter__colors-item
                                a(href="#" style="background-color:#" + color).filter__colors-link
                    .filter__reset--wrap
                        a(href="#").filter__reset Сбросить фильтр
            li.filter__item
                .filter__title
                    h2 Операционная система
                .filter__content 
                     ul.filter__choose.filter__choose_chackboxes
                        - var items = ["Android","IOS","Windows Mobile","Symbian","Custom"]
                        each item in items
                            li.filter__choose-item
                                label.filter__choose-label
                                    input(name="location" type="checkbox").filter__choose-input
                                    span.filter__choose-elem
                                    span.filter__choose-text= item   
                    .filter__reset--wrap    
                        a(href="").filter__reset Сбросить фильтр